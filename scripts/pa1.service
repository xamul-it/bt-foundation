[Unit]
Description=HMA Strategy
After=zmq-proxy.service
Requires=zmq-proxy.service
PartOf=zmq-proxy.service  # Questo lo fa riavviare con zmq

[Service]
Type=simple
WorkingDirectory=/home/htpc/backtrader/backtrader
EnvironmentFile=/home/htpc/backtrader/.PA1
ExecStart=./backtrader/bin/pa1-service.sh
StandardOutput=append:/home/htpc/backtrader/logs/PA1.log
StandardError=append:/home/htpc/backtrader/logs/PA1.log
Restart=on-failure

[Install]
WantedBy=default.target
