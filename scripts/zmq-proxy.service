[Unit]
Description=Alpaca ZMQ Proxy
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/htpc/backtrader/backtrader

# Versione corretta con attivazione virtualenv
ExecStart=/bin/bash -c 'source ./backtrader/bin/activate && source ../.zmq-env && exec python ./alpaca_zmq_proxy.py --log-level=INFO'

# Gestione dei log (alternativa pi√π pulita)
StandardOutput=append:/home/htpc/backtrader/logs/zmq.log
StandardError=append:/home/htpc/backtrader/logs/zmq.log

# Politica di riavvio
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=default.target
